{
  "name": "practicum_messenger",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "scripts": {
    "dev": "parcel static/index.html -p 3000",
    "build": "parcel build static/index.html",
    "start": "npm run build && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.5.0",
    "@parcel/resolver-glob": "2.5.0",
    "@parcel/transformer-inline-string": "2.5.0",
    "@parcel/transformer-less": "2.5.0",
    "@parcel/transformer-webmanifest": "2.5.0",
    "@sincerely-manny/parcel-transformer-tbt": "github:sincerely-manny/parcel-transformer-tbt",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.14.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "less": "~4.1.2",
    "parcel": "2.5.0",
    "path-browserify": "1.0.1",
    "process": "0.11.10",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": "16.14.2"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "indent": "off",
      "@typescript-eslint/indent": ["error", 4],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-await-in-loop": "off",
      "default-case-last": "warn",
      "no-underscore-dangle": "off"
    }
  }
}
